PORT=3000
NODE_ENV=production
LOG_LEVEL=info

# Database Configuration
DATABASE_URL=postgresql://parallax:secure_password@localhost:5432/parallax_licenses
DB_POOL_MIN=2
DB_POOL_MAX=10

# CORS Configuration
ALLOWED_ORIGINS=https://parallax.app,https://www.parallax.app

# License Signing Keys (Generate with: node scripts/generateKeys.js)
LICENSE_PUBLIC_KEY=<base64-public-key>
LICENSE_SECRET_KEY=<base64-secret-key>

# JWT Configuration (Generate with: openssl rand -hex 32)
JWT_SECRET=<random-64-char-string>
JWT_EXPIRES_IN=7d

# Gumroad Integration
GUMROAD_WEBHOOK_SECRET=<from-gumroad-dashboard>

# Email Configuration (SendGrid example)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=<sendgrid-api-key>
EMAIL_FROM=licenses@parallax.app
EMAIL_FROM_NAME=Parallax Licenses

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
ACTIVATION_RATE_LIMIT_MAX=10
ACTIVATION_RATE_LIMIT_WINDOW_MS=3600000
