{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Parallax Intelligence Platform",
  "version": "1.0.0",
  "identifier": "com.parallax.intelligence",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Parallax Intelligence Platform",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": [
          "'self'",
          "https://generativelanguage.googleapis.com",
          "https://license-server.parallax.app",
          "https://api.parallax.app",
          "https://*.sentry.io",
          "tauri:"
        ],
        "script-src": ["'self'", "'wasm-unsafe-eval'"],
        "style-src": ["'self'", "'unsafe-inline'"],
        "img-src": ["'self'", "data:", "https:", "asset:", "tauri:"],
        "font-src": ["'self'", "data:"],
        "media-src": ["'self'", "asset:"]
      },
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": true,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/*", "$RESOURCE/*"]
      }
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis", "deb", "rpm", "appimage", "dmg"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Parallax Team",
    "copyright": "Copyright (c) 2026 Parallax Team",
    "category": "SecurityApp",
    "shortDescription": "Multi-dimensional threat intelligence platform",
    "longDescription": "Parallax combines AI-powered reconnaissance, infrastructure mapping, and image analysis to give security teams comprehensive threat intelligence from every angle.",
    "linux": {
      "deb": {
        "depends": []
      }
    },
    "macOS": {
      "minimumSystemVersion": "10.15",
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": false
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "dialog": true,
      "pubkey": "WILL_BE_GENERATED_DURING_BUILD",
      "endpoints": [
        "https://releases.parallax.app/{{target}}/{{arch}}/{{current_version}}"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
